<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="com.cyberway.common.media.audio.domain.Audio" table="CMS_MEDIA_AUDIO">
		<id name="id" type="java.lang.Long" column="id">
			<generator class="native" />
		</id>
		<property name="siteId" type="java.lang.Long" />
		<property name="title" type="java.lang.String" length="100" />
		<property name="discribe" type="java.lang.String" length="255" />
		<property name="fileName" type="java.lang.String" length="255" />
		<property name="filePath" type="java.lang.String" length="255" />
		<property name="imagePath" type="java.lang.String" length="255" />
		<property name="createTime" type="java.util.Date" />
		
		<property name="modifUserId" type="java.lang.Long" />
		<property name="modifUserName" type="java.lang.String" />
		<property name="lastModifTime" type="java.util.Date" />
		<property name="albumId" type="java.lang.Long" />
		<property name="commentCount" type="java.lang.Long" />
		<property name="playCount" type="java.lang.Long" />
		<property name="viewCount" type="java.lang.Long" />
		<property name="topFlag" type="boolean"/>
		<property name="format" type="java.lang.String" />
		<property name="issue" type="java.lang.Long" />
	</class>
</hibernate-mapping>