<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="com.cyberway.common.media.album.domain.Album" table="CMS_MEDIA_ALBUM">
		<id name="id" type="java.lang.Long" column="id">
			<generator class="native" />
		</id>
		<property name="siteId" type="java.lang.Long" />
		<property name="title" type="java.lang.String" length="255" />
		<property name="discribe" type="java.lang.String" length="500" />
		<property name="imagePath" type="java.lang.String" length="255" />
		<property name="createTime" type="java.util.Date" />
		<property name="modifUserId" type="java.lang.Long" />
		<property name="modifUserName" type="java.lang.String" />
		<property name="lastModifTime" type="java.util.Date" />
		<property name="pid" type="java.lang.Long" />
		<property name="mediaType" type="java.lang.String" />
		<property name="waterMark" type="java.lang.Long" />
	</class>
</hibernate-mapping>