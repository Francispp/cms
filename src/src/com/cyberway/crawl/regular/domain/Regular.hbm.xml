<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="com.cyberway.crawl.regular.domain" default-lazy="true">
    <class name="com.cyberway.crawl.regular.domain.Regular" table="CRAWL_REGULAR">
        <id name="oid" type="java.lang.Long" column="OID">
            <generator class="native" />
        </id>
        <property name="title"  type="java.lang.String" column="title" length="255"/>
        <property name="content"  type="java.lang.String" column="content" length="255"/>
    </class>
</hibernate-mapping>