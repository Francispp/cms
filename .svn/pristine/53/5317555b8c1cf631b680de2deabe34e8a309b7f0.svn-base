/*界面层基本样式表*/
body {
    text-align: center;
    font-size: 10pt;
}

table {
    font-size: 10pt;
    border-collapse: collapse
}
td.center {
    font-size: 11pt;
    color: #336699;
    text-align: center;
    padding-right: 20px;
    border: #a8cbf1 1px solid;
    background-color: #f1f1f1
}

/*表单录入栏格式样式:居左对齐*/
td.left {
    text-align: left;
}

/*表单文字描述单元格样式:描述居右对齐,有背景色,单元格高度*/
td.right {
    text-align:right;
    background-color: #F5F5F5;
}

td.bottom {
    color: #336699;
    text-align: center;
    padding-top: 10px;
    padding-bottom: 10px;
    background-color: #ffffff;
}

A:link, a:visited {
    color: #336699;
    text-decoration: none
}

A:active {
    color: #ff0000;
    text-decoration: none
}

A:hover {
    color: #6A9BCC;
    text-decoration: underline
}

.border {
    border: #7f7f7f 1px solid;
}

/*主页面标题*/
#main-page-title{
	height:1;
	FILTER: Glow(Color=#000000,Strength=3);
	font-size:32px;
	color:#FFFFFF;
	margin-left:130; 
	letter-spacing:2; 
	font-weight:bold;
	//text-align:left;
}

/*主页面按钮*/
#main-page-tools{
	float:right; 
	position:relative; 
	top:2;
	font-size:10pt;
}

/*主页面显示客户信息*/
#main-page-client{
	font-size:12pt; font-family: 黑体; color:#FFFFFF; position:absolute; top:28; right:6;
}

/*公司logo*/
#main-company-logo{
	position:absolute; top:8; right:6; font-size:10pt; font-weight:bold;
}

/*主页面菜单*/
#menuDiv{
	background-image: url('images/check.gif');
	text-align:left;
}

/*主页面内容*/
#main-page-content{
	height:85%
}

/*页面标题*/
#titleDiv{
	font-size: 12pt; 
	letter-spacing: 2pt; 
	color: #FFFFFF; border: 
	1px solid #000000; 
	background-color: #3399CC; 
	padding-top:2px; 
	padding-bottom:2px;
	width:100%;
}
/*操作功能按钮条*/
#operationDiv {	
	text-align: right;
    border-left:1px solid #000000;
    border-right:1px solid #000000;
    border-bottom:1px solid #000000; 
    letter-spacing: 2; padding-top: 2px;
    padding-bottom: 2px; 
    background-color: #f9f9f9; 
    padding-left:4px; 
    padding-right:4px
    //width:100%;
    height:25;
}

/*操作功能按钮条-无边框*/
#operationDivNoBorder {	
	text-align: right;
    letter-spacing: 2; padding-top: 2px;
    padding-bottom: 2px; 
    background-color: #f9f9f9; 
    padding-left:4px; 
    padding-right:4px
    //width:100%;
    height:25;
}

/*页面主要内容*/
#page-content {
	font-size: 10pt;
	border-left-style: solid; 
	border-left-width: 1px; 
	border-right-style: solid; 
	border-right-width: 1px; 
	border-top-width: 1px; 
	border-bottom-style: solid; 
	border-bottom-width: 1px; 
	padding: 2px;
	text-align:left;
	height:90%;
}
/*编辑页面主要内容*/
#page-edit-content{
	font-size: 10pt;
	border-left-style: solid; 
	border-left-width: 1px; 
	border-right-style: solid; 
	border-right-width: 1px; 
	border-top-width: 1px; 
	border-bottom-style: solid; 
	border-bottom-width: 1px; 
	padding: 2px;
	text-align:left;
}

/*编辑页面主要内容-无边框*/
#page-edit-content-noborder{
	font-size: 10pt;
	padding: 2px;
	text-align:left;
	width:100%;
}

/*窄一些页面的设置*/
.narrow {
	width:80%;
}

/*在框架窗口中处于页面左边的窗口*/
#frame_left_content{
	float: left; width:200px; height:100%;scrollbar-face-color : threedface;overflow-x:scroll; overflow-y:scroll;border-left-width:1px; border-right-style:solid; border-right-width:1px; border-top-width:1px; border-bottom-width:1px;
}

/*在框架窗口中处于页面右边的窗口*/
#frame_right_content{
	float: right; width: *; height:100%;
}

/*文本框样式*/
input.input_common{
	font-family:Verdana,"宋体";
	font-size: 12px;
	width:100%;
}

/*文本框样式无边框*/
input.input_common_noborder{
	font-family:Verdana,"宋体";
	font-size: 12px;
	width:100%;
	border-width: 0;
}

#tableDiv {
    float: left;
}

.nullBorder {
    border: 0px;
    cursor: pointer;
}

/* 状态栏正常信息提示 */
.message {
	width:100%;
    color: blue;
    background: transparent;
    text-align: center;
    margin-left: 12pt;
}

/* 状态错误信息提示 */
.error {
	width:100%;
    color: red;
    background: transparent;
    text-align: center;
    margin-left: 12pt;
}


/* Menu Bar */

.menu-bar {
	/*background:		ButtonFace;*/
	cursor:			default;
	padding:		1px;
}

.menu-bar .menu-button {
	/*background:	ButtonFace;*/
	color:		ButtonText;
	font-size: 12px;
	padding:	3px 7px 3px 7px;
	border:		0;
	margin:		0;
	display:	inline-block;
	white-space:	nowrap;
	cursor:			default;
}

.menu-bar .menu-button.active {
	background:		#dbd8d1;
	padding:		2px 6px 3px 6px;
	border:			1px solid #666666;
	border-bottom:	0;
}

.menu-bar .menu-button.hover {
	background:		#b6bdd2;
	padding:		2px 6px 2px 6px;
	border-width:	1px;
	border-style:	solid;
	border-color:	#0A246A;
}

/* End Menu Bar */

