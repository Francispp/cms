<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping default-lazy="true">
    <class name="com.cyberway.cms.component.leaveword.domain.AnswerLeaveWord" table="CMS_ANSWERLEAVEWORD" lazy="true">
        <id name="oid" type="java.lang.Long">
            <generator class="native" />
        </id>
     	<property name="topicid" />
     	<property name="userId" />
		<property name="userName" length="100"/>
		<property name="answerTime" />  
		<property name="content" length="5000"/>  
    </class>
</hibernate-mapping >
